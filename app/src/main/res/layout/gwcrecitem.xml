<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:paddingLeft="10sp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/gwcRecImageView"
            android:layout_width="23sp"
            android:layout_height="23sp"
            android:src="@drawable/duihaoselected" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginLeft="15sp"
            android:src="@drawable/dp2" />

        <TextView
            android:id="@+id/gwcRecShangPu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布兰朵官方旗舰店"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:layout_marginLeft="10sp"
            android:padding="2sp"
            android:src="@drawable/zhanghurightjiantou" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gwcRecrecview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>