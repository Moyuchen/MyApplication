<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.moyuchen.mvpuser.ProductInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/productimageivew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/leftjiantou"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/producttablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.design.widget.TabLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/productviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/b2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:paddingTop="7dp"
                android:paddingBottom="4dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ld"/>
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="联系卖家"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:paddingTop="7dp"
                android:paddingBottom="4dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/dp2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:text="店铺"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:paddingTop="7dp"
                android:paddingBottom="4dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/xin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:text="关注"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:paddingTop="7dp"
                android:paddingBottom="4dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:src="@drawable/gg"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:text="购物车"/>
            </RelativeLayout>
        <Button
            android:layout_marginLeft="10dp"
            android:background="#f00"
            android:layout_toRightOf="@+id/car_goods"
            android:id="@+id/addGouWuCar"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:text="添加购物车" />

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
