<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/sys"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/jdmainheadersas"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫啊扫"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/etlinear"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/jdmainheaderback"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/jqr"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/jdmainheaderss"/>
        <EditText
            android:id="@+id/et_keywords"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="澳柯玛"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/jdmainheaderjqr"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            >
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:textSize="10dp"
                android:gravity="center"
                android:background="@drawable/jdmainheaderxxtvback"
                android:layout_alignParentRight="true"
                android:textColor="@color/ZC_head_tv_color"
                android:text="4"/>
            <ImageView
                android:id="@+id/xinxi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/jdmainheaderxx"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息"/>
    </LinearLayout>

</LinearLayout>